#dynamic_queries
  .page-header
    %h1= dqt('associations.page_header')
    = render :partial => 'progressbar'
    = render :partial => 'generated_sql'

    %p.text-info= dqt('associations.description')

  .model-canvas
    = render :partial => 'dynamic_queries/associations/model_panel', :collection => @query.models
    .clearfix


:javascript
  $(document).ready(function() {
    dynamicQueries.actions.associations.init("#{dq_url(:update_model_positions, @query, :key => 'associations')}", #{associations_json});
  });