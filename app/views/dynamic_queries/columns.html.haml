#dynamic_queries
  .page-header
    %h1= dqt('columns.page_header')
    = render :partial => 'progressbar'
    = render :partial => 'generated_sql'

    %p.text-info= dqt('columns.description')


  .model-canvas
    = render :partial => 'dynamic_queries/columns/model_panel', :collection => @query.models
    .clearfix


:javascript
  $(document).ready(function() {
    dynamicQueries.actions.columns.init("#{dq_url(:update_model_positions, @query, :key => 'columns')}", #{columns_associations_json});
  });